@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new { @class="btn btn-primary"})
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts
{
<script>
        $(document).ready(function () {
        //DataTable to handle presentation dataTable will look in to current document and look for table with id movies
            $("#movies").DataTable({
                ajax: {url: "api/movies",dataSrc: ""},
                columns: [
                    { data: "name", render: function (data, type, movie) {return "<a href='/movies/edit"+movie.id+"'>" + movie.name + "</a>"}},
                    { data: "genre.name" },
        //give class js-delete to specify this button will invoke click .js-delete filter
                    { data: "id", render: function (data) {return "<button class='btn btn-link js-delete' data-movie-id="+data+">Delete</button>"} },
                ]

            });

        //implement delete
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);

        //bootbox for confirmation box rendering
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
</script>
}